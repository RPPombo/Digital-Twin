#include <Arduino.h>
#include <max6675.h>
const int thermoDO = 12;
const int thermoCS = 11;
const int thermoCLK = 13;
MAX6675 termopar(thermoCLK, thermoCS, thermoDO);
void setup() {
  Serial.begin(9600);
  Serial.println("Teste MAX6675...");
  delay(500);
}
void loop() {
  float t = termopar.readCelsius();
  if (isnan(t)) Serial.println("Erro: sem leitura");
  else Serial.println(String("Temperatura: ") + t + " Â°C");
  delay(1000);
}
